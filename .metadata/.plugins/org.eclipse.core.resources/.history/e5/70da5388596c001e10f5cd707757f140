package com.clinica.procedimentos.controller.exeptionhandler;

import java.time.OffsetDateTime;

import io.swagger.v3.oas.annotations.media.Schema;

@Schema(name = "ProblemDetail")
public class Problem {

//	@Schema(example = "https://clinicas.com/errors/entity-not-found")
//	private String type;
	
	@Schema(example = "Procedimento não registrado")
	private String title;
	
	@Schema(example = "404")
	private Integer status;
	
	@Schema(example = "Procedimento de id 5 não foi encontrado")
	private String detail;
	
//	@Schema(example = "/procedimentos")
//	private String instance;
	
	@Schema(example = "2023-08-01T10:00:00.7604936-03:00")
	private OffsetDateTime timestamp;
	
}
