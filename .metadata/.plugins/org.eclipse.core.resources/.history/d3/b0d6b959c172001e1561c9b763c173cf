package com.clinica.cadastro.controller.api;

import org.springframework.http.ResponseEntity;
import org.springframework.kafka.core.KafkaTemplate;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.clinica.cadastro.domain.dto.input.MedicalAppointmentDTOInput;
import com.clinica.cadastro.domain.dto.output.MedicalAppointmentOutPut;

import lombok.RequiredArgsConstructor;

@RestController
@RequestMapping("/usuarios")
@RequiredArgsConstructor
public class AppointmentController {
	
	final private KafkaTemplate<String , Object> kafkaTemplate;
	
	@GetMapping
	public ResponseEntity<MedicalAppointmentOutPut> createAppointmente()(MedicalAppointmentDTOInput appointment){
		
		kafkaTemplate.send("appointment-to","1", 1L);
		
	}	
}
