package com.clinica.cadastro.controller.api;

import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Service;

import com.clinica.cadastro.domain.dto.input.DoctorKafkaDTOOutput;
import com.clinica.cadastro.domain.exception.EntityNotFoundException;

@Service
public class Listener {

	@KafkaListener(topics = "doctor-to-appointment", groupId = "grupo")
	public void getDoctor(DoctorKafkaDTOOutput doctor) {
		
		if(doctor != null) {
			System.out.println("Chegou");
		}
		else {
			throw new EntityNotFoundException("Id de medico incorretor");
		}
		
	}
}
