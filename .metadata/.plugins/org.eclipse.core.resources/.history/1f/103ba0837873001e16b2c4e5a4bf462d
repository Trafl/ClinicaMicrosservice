package com.clinica.cadastro.domain.service.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.clinica.cadastro.domain.dto.feign.DoctorFeign;

@FeignClient(url = "localhost:8082/medicos-db-ms")
public interface DoctorService {

	@RequestMapping(value = "/medicos/{doctorId}", method = RequestMethod.GET)
	DoctorFeign getDoctor(@PathVariable("doctorId") Long doctorId);
}
