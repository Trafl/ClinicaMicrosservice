package com.clinica.cadastro.domain.service.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.clinica.cadastro.domain.dto.output.DoctorDTOOutput;

@FeignClient(name = "medicos-db-ms")
public interface DoctorService {

	@RequestMapping(method = RequestMethod.GET, value = "/medico/{doctorId}")
	DoctorDTOOutput getDoctor(@PathVariable("doctorId") Long doctorId);
}
