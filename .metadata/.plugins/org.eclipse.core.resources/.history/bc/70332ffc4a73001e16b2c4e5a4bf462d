package com.clinica.cadastro.domain.service.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.cloud.openfeign.FeignClientProperties;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.clinica.cadastro.domain.dto.output.DoctorDTOOutput;

@FeignClient(name = "medicos-db-ms", configuration = FeignClientProperties.FeignClientConfiguration.class)
public interface DoctorService {

	@GetMapping("/medico/{doctorId}")
	DoctorDTOOutput getDoctor(@PathVariable Long doctorId);
}
